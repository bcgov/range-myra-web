{
    auto_https off
}
:2015

root * /srv
file_server


log {
  level INFO
}
encode gzip
try_files {path} /index.html
templates /static/js/* {
  mime application/javascript
}

handle /service-worker.js {
  header Cache-Control max-age=0,no-cache,no-store,must-revalidate
}

handle /index.html {
  header Cache-Control max-age=0,no-cache,no-store,must-revalidate
}

handle {
  header Cache-Control max-age=3600
}

